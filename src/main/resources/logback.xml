<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{ISO8601}]\t[%level]\t[%X{akkaSource}]\t- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- change it in akka conf -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
